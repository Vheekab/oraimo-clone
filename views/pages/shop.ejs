<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>oraimo Nigeria Unofficial Online Store</title>
    <link rel="stylesheet" href="/public/css/index1.css">
    <link rel="stylesheet" href="/public/css/index2.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div id="productdetails">
        <p id="details-alert"><%- alert %></p>

        <% if (productData) { %>
            <h2 id="details-title"><%= productData.title %></h2>
        <% } else if (arrivalData) { %>
            <h2 id="details-title"><%= arrivalData.title %></h2>
        <% } %> 

        <div id="details-grid">
            <div>
                <% if (productData) { %>
                    <img src=<%= productData.image %>>
                <% } else if (arrivalData) { %>
                    <img src=<%= arrivalData.image %>>
                <% } %>
            </div>
            <div id="details-grid2">
                <h2>Description</h2>
                <% if (productData) { %>
                    <p><%= productData.description %></p>
                    <p class="rating"><%= productData.rating %> rating <span class="reviews"><%= productData.review %> reviews</span></p>
                    <h3 class="price">₦<%= productData.price %></h3>
                <% } else if (arrivalData) { %>
                    <p><%= arrivalData.description %></p>
                    <p class="rating"><%= arrivalData.rating %> rating <span class="reviews"><%= arrivalData.review %> reviews</span></p>
                    <h3 class="price">₦<%= arrivalData.price %></h3>
                <% } %>
            </div>
        </div>

        <div id="details-buttons">
            <form action="/addtocart" method="post">
                <% if (productData) { %>
                    <input type="hidden" name="productId" value="<%= productData._id %>">
                    <input type="hidden" name="productImage" value="<%= productData.image %>">
                    <input type="hidden" name="productName" value="<%= productData.title %>">
                    <input type="hidden" name="productPrice" value="<%= productData.price %>">
                    <input type="hidden" name="productQuantity" value="1">
                    <input type="hidden" name="productTotal" value="">
                <% }  else if (arrivalData) { %>
                    <input type="hidden" name="productId" value="<%= arrivalData._id %>">
                    <input type="hidden" name="productImage" value="<%= arrivalData.image %>">
                    <input type="hidden" name="productName" value="<%= arrivalData.title %>">
                    <input type="hidden" name="productPrice" value="<%= arrivalData.price %>">
                    <input type="hidden" name="productQuantity" value="1">
                    <input type="hidden" name="productTotal" value="">
                <% } %>
                <button id="details-add" type="submit">Add to cart</button>
            </form>
            <button id="details-buy">Buy It Now</button>
        </div>

        <div id="details-other"><a href="/"><p>View other products</p></a></div>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
<script src="/public/javascript/shop.js"></script>
</html>