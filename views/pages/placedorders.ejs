<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Placed Orders</title>
    <link rel="stylesheet" href="/public/css/index1.css">
    <link rel="stylesheet" href="/public/css/index2.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div id="placedorders-page">
        <h1>Placed Orders</h1>
        <div>
            <% if (orders.length === 0) { %>
               <p id="placedorders-none">No placed orders currently</p>

            <% } else { %>
                <div id="placedorders-details">
                    <% orders.forEach((element, index) => { %>
                        <div id="placedorders-details1">
                            <h4><%= element[0].checkFirstname %></h4>
                            <div>
                                <h4><%= element[0].checkEmail %></h4>
                                <h4><%= element[0].checkPhone %></h4>
                                <h4><%= element[0].checkAddress %></h4>
                                <h4><%= element[0].checkCity %></h4>
                                <h4><%= element[0].checkState %></h4>
                            </div>
                        </div>
                        <div id="placedorders-details2">
                            <% for( let i = 1; i < element.length - 1; i++ ) { %>
                                <div><img src="<%= element[i].productImage %>"></div>
                                <p><%= element[i].productName %></p>
                                <p>Qty: <%= element[i].productQuantity %></p>
                            <% } %>
                        </div>
                        <div id="placedorders-details3">
                            <p>Total: â‚¦<%= element[element.length -1] %></p>
                            <div>
                                <p>Clear</p>
                                <form action="/clearorder" method="post">
                                    <input type="hidden" name="index" value="<%= index %>">
                                    <button>X</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
        <p id="placedorders-last">Go back to dashboard <a href="/dashboard">here</a></p>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
<script src="/public/javascript/placedorders.js"></script>
</html>