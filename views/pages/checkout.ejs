<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="/public/css/index1.css">
    <link rel="stylesheet" href="/public/css/index2.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div id="checkout-page">
        <form action="/sendorder" method="post">
            <h1>Shipping & Payments</h1>
            <div id="checkout-section">
                <div id="checkout-section1">
                    <div>
                        <p>Email address <span>*</span></p> <input type="email" name="checkEmail">
                    </div>
                    <div>
                        <p>First Name <span>*</span></p> <input type="text" name="checkFirstname">
                    </div>
                    <div>
                        <p>Street address <span>*</span></p> <input type="text" name="checkAddress">
                    </div>
                    <div>
                        <p>City <span>*</span></p> <input type="text" name="checkCity">
                    </div>
                    <div>
                        <p>State <span>*</span></p> <input type="text" name="checkState">
                    </div>
                    <div>
                        <p>Phone number <span>*</span></p> <input type="text" name="checkPhone">
                    </div>
                </div>
                <div>
                    <% cart.forEach(element => { %>
                     <div class="checkout-items">
                        <div><img src="<%= element.productImage %>"></div>
                        <div class="checkout-items2">
                            <p><%= element.productName %></p>
                            <p class="price">₦<%= element.productTotal %></p>
                            <p>Qty: <%= element.productQuantity %></p>
                        </div>
                     </div>
                    <% }) %>
                    <div id="checkout-subtotal">
                        <div>
                            <p>Cart Subtotal</p> <p>₦<%= cartTotal %></p>
                        </div>
                        <div>
                            <p>Shipping</p> <p>₦<%= shippingValue %></p>
                        </div>
                    </div>
                    <div id="checkout-total">
                        <p>Order Total</p> <p style="color: #4ad295;">₦<%= orderTotal %></p>
                    </div>
                </div>
            </div>
            <div id="checkout-button">
                <button type="submit">Complete Order</button>
            </div>
            <div id="checkout-return">
                <p>Return to cart <a href="/cart">here</a></p>
            </div>
        </form>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
<script src="/public/javascript/checkout.js"></script>
</html>